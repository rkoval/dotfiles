{
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".git"],
  "compilerOptions": {
    "allowUnreachableCode": false,
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": false,
    "outDir": "./out",
    "sourceMap": true,
    "lib": ["esnext"],
    "module": "commonjs",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2022",
    "types": ["bun-types"]
  }
}
